{% extends 'base.html.twig' %}

{% block title %}Listing des Matériaux{% endblock %}

{% block body %}    

    <div class="row offset-lg-4 col-4">
        <div class="col-mx-auto">

            <h1 class="text-center">Matériaux</h1>
            <div>
                {{ form_start(form) }}
                    {{ form_row(form.name) }}               
                    
                    <div class="d-flex justify-content-between my-3">
                        {{ form_row(form.submit) }}                         
                    </div>  
                {{ form_end(form) }}
            </div>


            {# Listing materials #}
            <div class="mb-3">
                <table class="table mb-3">
                    <thead>
                        <tr>
                            <th>Nom</th>					
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for material in materials %}
                            <tr class="all_articles">
                                <td>{{material.name}}</td>
                                <td>
                                    <div class="d-flex">
                                        <a class="me-1 btn btn-primary" href="{{ path('update_material', {id: material.id}) }}">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <a class="me-1 btn btn-danger btn-red" href="{{ path('delete_material', {id: material.id}) }}" onclick="return confirm('Etes vous sûr de vouloir supprimer ce matériaux ?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div>
                <a href="{{ path('admin') }}">
                    <div class="btn btn-danger btn-red my-3">Retour</div>
                </a>
            </div>

        </div>
    </div>

    
{% endblock %}