<!DOCTYPE html>
<html>
{% set route_name = app.request.attributes.get('_route') %}
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BECK Quentin{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <!--Font-Fmaily-->
            <link rel="preconnect" href="https://fonts.gstatic.com">
            <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
            <!--Font Awesome-->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
            <!--FAVICON-->
            <link rel="icon" type="image/png" href="{{ asset('img/icons/favicon.ico') }}" />
            <!--CSS-->
            <link rel="stylesheet" href="{{asset('css/styles.css')}}">
        {% endblock %}
       
    </head>

    <body>

        {{ render(controller('App\\Controller\\BaseController::header', {
            'routeName' : route_name
        })) }}

        {% include "base/_flash.html.twig" %}
        {% block body %}{% endblock %}

        {% include "base/_footer.html.twig" %}     

         {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous">
            </script>    
            <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}           
    </body>
</html>
